<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/row1">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:id="@+id/route"
                android:layout_gravity="left"
                android:enabled="true"
                android:layout_alignParentLeft="true"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:id="@+id/txtHyphen"
                android:layout_toRightOf="@+id/route"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N. to University Area TC"
                android:id="@+id/destination"
                android:layout_gravity="right"
                android:enabled="true"
                android:layout_toRightOf="@+id/txtHyphen"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="in 5 min"
                android:id="@+id/eta"
                android:gravity="right"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/row2">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                android:id="@+id/textView"
                android:layout_gravity="left"
                android:enabled="true"
                android:layout_alignParentLeft="true"
                android:phoneNumber="false"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:id="@+id/textView2"
                android:layout_toRightOf="@+id/textView"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S. to Westshore TC"
                android:id="@+id/textView3"
                android:layout_gravity="right"
                android:enabled="true"
                android:layout_toRightOf="@+id/textView2"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="in 7 min"
                android:id="@+id/textView4"
                android:gravity="right"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/row3">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="400"
                android:id="@+id/textView5"
                android:layout_gravity="left"
                android:enabled="true"
                android:layout_alignParentLeft="true"
                android:phoneNumber="false"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:id="@+id/textView6"
                android:layout_toRightOf="@+id/textView5"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S. to Downtown"
                android:id="@+id/textView7"
                android:layout_gravity="right"
                android:enabled="true"
                android:layout_toRightOf="@+id/textView6"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="in 16 min"
                android:id="@+id/textView8"
                android:gravity="right"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/row4">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24"
                android:id="@+id/textView9"
                android:layout_gravity="left"
                android:enabled="true"
                android:layout_alignParentLeft="true"
                android:phoneNumber="false"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:id="@+id/textView10"
                android:layout_toRightOf="@+id/textView9"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E. to NetparkTC"
                android:id="@+id/textView11"
                android:layout_gravity="right"
                android:enabled="true"
                android:layout_toRightOf="@+id/textView10"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="in 21 min"
                android:id="@+id/textView12"
                android:gravity="right"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/stop_desc"
            android:paddingTop="5dp">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:src="@drawable/ic_bus"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alumni Dr. @ Laurel Dr."
                android:id="@+id/textView13"
                android:layout_toRightOf="@+id/imageView"
                android:paddingLeft="2dp"
                android:textSize="12dp"
                />
    </RelativeLayout>
</LinearLayout>